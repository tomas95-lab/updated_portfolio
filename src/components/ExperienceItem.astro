---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  company?: string
  description: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div class="group relative flex gap-6 pb-8 md:pb-12">
  <!-- Timeline line and dot -->
  <div class="relative flex flex-col items-center">
    <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-r from-blue-600 to-violet-600 shadow-lg group-hover:shadow-xl group-hover:shadow-blue-500/25 transition-all duration-500">
      <div class="h-4 w-4 rounded-full bg-white"></div>
    </div>
    <div class="w-0.5 flex-1 bg-gradient-to-b from-blue-600/50 to-transparent"></div>
  </div>

  <!-- Content -->
  <div class="flex-1 pb-8">
    <div class="rounded-2xl bg-white/60 dark:bg-gray-800/60 backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 p-6 md:p-8 shadow-lg hover:shadow-xl transition-all duration-500 group-hover:border-blue-300/50 dark:group-hover:border-blue-600/50">
      <div class="mb-4">
        <time class="inline-flex items-center px-3 py-1 text-xs font-semibold text-blue-700 dark:text-blue-300 bg-blue-100 dark:bg-blue-900/30 rounded-full mb-3">
          {date}
        </time>
        <h3 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
          {title}
        </h3>
        {company && (
          <h4 class="text-lg font-semibold text-gray-600 dark:text-gray-300 mb-4">
            {company}
          </h4>
        )}
      </div>
      
      <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
        {description}
      </p>
      
      {link && (
        <LinkInline href={link}>
          <span class="group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
            Learn more
          </span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 h-4 ml-1 transition-transform duration-300 group-hover:translate-x-1"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M9 6l6 6l-6 6" />
          </svg>
        </LinkInline>
      )}
    </div>
  </div>
</div>