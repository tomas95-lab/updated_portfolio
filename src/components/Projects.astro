---
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
// Removed unused import and fixed casing issue

const TAGS = {
  NEXT: { name: "Next.js", class: "bg-black text-white" },
  TAILWIND: { name: "Tailwind CSS", class: "bg-[#003159] text-white" },
  REACT: { name: "React", class: "bg-blue-500 text-white" },
  FIREBASE: { name: "Firebase", class: "bg-yellow-400 text-black" },
  AI: { name: "AI Bot", class: "bg-purple-600 text-white" },
  "3D": { name: "Three.js", class: "bg-indigo-700 text-white" },
  TYPE: { name: "TypeScript", class: "bg-blue-800 text-white" },
  BOOTSTRAP: { name: "Bootstrap", class: "bg-purple-800 text-white" },
  JS: { name: "JavaScript", class: "bg-yellow-300 text-black" },
  JQUERY: { name: "jQuery", class: "bg-[#0769AD] text-white" },
  HTML: { name: "HTML", class: "bg-orange-500 text-white" },
  CSS: { name: "CSS", class: "bg-blue-600 text-white" },
  VITE: { name: "Vite", class: "bg-purple-500 text-white" },
  ASTROJS: { name: "Astro.js", class: "bg-orange-600 text-white" },
};

const PROJECTS = [
  {
    title: "SitePilot â€” Next-Gen ERP System",
    featured: true,
    tags: ["REACT", "FIREBASE", "TAILWIND", "AI", "3D"],
    description:
      "SitePilot is a cloud-based ERP designed for architecture and construction SMEs. It features smart dashboards, 3D asset viewer, AI chatbot, and full control over orders, finances, and suppliers. Built with React 18+, Firebase, and TailwindCSS, it's fast, powerful, and made for modern teams.",
    link: "https://erp-demo-rzrt.vercel.app/",
    image: "/projects/dashboard.png",
    github: "https://github.com/tomas95-lab/ERP_demo",
  },
  {
    title: "PiotSite - Landing",
    tags: ["ASTROJS", "TAILWIND"],
    description:
      "A clean, modern landing page introducing SitePilot: a next-gen ERP built as a command center for architecture studios, designers, and construction SMEs. Powered by React 18+, TypeScript, Firebase, and TailwindCSS.",
    link: "https://landing-j8jkcx6hp-tomas95labs-projects.vercel.app/",
    image: "/projects/PILOT-LANDING.png",
    github: "https://github.com/tomas95-lab/landing-ERP",
  },
  {
    title: "Carpinteria TIL",
    tags: ["HTML", "CSS", "BOOTSTRAP", "JQUERY", "JS"],
    description:
      "Responsive and animated website, featuring an interactive carousel and image gallery. Developed from scratch using HTML, CSS, Bootstrap, jQuery, and various JavaScript libraries.",
    link: "https://til-aofx3xp8t-tomas95labs-projects.vercel.app/",
    image: "/projects/TIL.png",
  },
  {
    title: "Unplash",
    tags: ["REACT", "VITE", "CSS"],
    description:
      "Minimalist interface with an integrated search to filter images by name. Created from scratch using Vite, React, and CSS.",
    link: "https://cosmic-medovik-8405da.netlify.app/",
    image: "/projects/unplash.webp",
  },
];

const sortedProjects = [...PROJECTS].sort((a, b) =>
  a.featured ? -1 : b.featured ? 1 : 0
);

// Function to determine animation delay
const getAnimationDelay = (index: number) => {
  return `${index * 0.15}s`;
};
---

<section class="max-w-6xl mx-auto">
  <div class="grid grid-cols-1 gap-16">
    {
      sortedProjects.map((project, index) => (
        <article 
          class="project-card rounded-2xl overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 shadow-xl hover:shadow-2xl transition-all duration-500 border border-gray-200 dark:border-gray-700"
          data-aos="fade-up"
          data-aos-delay={getAnimationDelay(index)}
        >
          <div class="grid md:grid-cols-2 gap-0">
            {/* Project image */}
            <div class="relative overflow-hidden group h-64 md:h-full">
              <img
                src={project.image}
                alt={project.title}
                class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-end p-6">
                <div class="transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                  <div class="flex gap-4">
                    {project.link && (
                      <a 
                        href={project.link} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="bg-white text-gray-900 hover:bg-yellow-300 px-4 py-2 rounded-lg flex items-center gap-2 transition-colors duration-300 font-medium text-sm"
                      >
                        <span>View Demo</span>
                      </a>
                    )}
                    {project.github && (
                      <a 
                        href={project.github} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="bg-gray-800 text-white hover:bg-gray-700 px-4 py-2 rounded-lg flex items-center gap-2 transition-colors duration-300 font-medium text-sm"
                      >
                        <span>GitHub</span>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </div>

            {/* Project content */}
            <div class="p-8 flex flex-col h-full">
              <header class="mb-4">
                {project.featured && (
                  <div class="mb-3">
                    <span class="bg-gradient-to-r from-amber-500 to-yellow-400 text-white text-xs font-bold px-3 py-1 rounded-full inline-flex items-center gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                      FEATURED
                    </span>
                  </div>
                )}
                <h3 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-white">
                  {project.title}
                </h3>
              </header>

              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags?.map((tag) => (
                  <span class={`text-xs font-semibold px-2.5 py-0.5 rounded-md ${TAGS[tag as keyof typeof TAGS]?.class ?? "bg-gray-700 text-white"}`}>
                    {TAGS[tag as keyof typeof TAGS]?.name ?? tag}
                  </span>
                ))}
              </div>

              <p class="text-gray-600 dark:text-gray-300 mb-6 flex-grow">
                {project.description}
              </p>

              <div class="mt-auto flex flex-wrap gap-4">
                {project.link && (
                  <a 
                    href={project.link} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 transition-colors duration-300"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    View Project
                  </a>
                )}
                {project.github && (
                  <a 
                    href={project.github} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200 transition-colors duration-300"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    Source Code
                  </a>
                )}
              </div>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>

<style>
  .project-card {
    transform: translateY(0);
    will-change: transform, box-shadow;
  }
  
  .project-card:hover {
    transform: translateY(-8px);
  }
  
  @media (prefers-reduced-motion: reduce) {
    .project-card {
      transition: none;
    }
    .project-card:hover {
      transform: none;
    }
  }
</style>

<script>
  import AOS from 'aos';
  import 'aos/dist/aos.css'; // Ensure AOS styles are imported

  document.addEventListener('DOMContentLoaded', () => {
    AOS.init({
      duration: 1000, // Smooth animation duration
      easing: 'ease-in-out', // Improved easing
      once: false, // Allow animations to trigger multiple times on scroll
      offset: 120, // Trigger animations slightly before the element is in view
    });
  });
</script>